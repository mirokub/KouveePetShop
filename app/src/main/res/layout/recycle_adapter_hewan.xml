<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvHewan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/parentHewan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewNamaHewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Hewan" />

        <TextView
            android:id="@+id/txtViewTglLahirHewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir" />

        <TextView
            android:id="@+id/txtViewJenisHewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Hewan" />

        <TextView
            android:id="@+id/txtViewUkuranHewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ukuran Hewan" />

        <TextView
            android:id="@+id/txtViewNamaCustomerHewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Customer" />

        <TextView
            android:id="@+id/txtViewEditedByHewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edited By" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
