<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProduk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/parentProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/gambarProduk"
            android:src="@drawable/ic_launcher_background"
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_produk"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:id="@+id/txtViewNamaProduk"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/satuan"
            android:textSize="15sp"
            android:id="@+id/txtViewSatuanProduk"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_harga_jual_produk"
            android:textSize="15sp"
            android:id="@+id/txtViewHargaProdukJual"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_harga_beli_produk"
            android:textSize="15sp"
            android:id="@+id/txtViewHargaProdukBeli"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stok"
            android:textSize="15sp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/txtViewStok"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/stok_minimum"
            android:textSize="15sp"
            android:id="@+id/txtViewStokMinimum"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_edited_by"
            android:textSize="15sp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/txtViewEditedByProduk"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
